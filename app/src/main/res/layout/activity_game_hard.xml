<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameEasy">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="336dp"
        android:layout_height="321dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="116dp"
                android:layout_height="111dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#C5A300"
                />


            <Button
                android:id="@+id/button5"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#1eb265"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button6"
                android:layout_width="116dp"
                android:layout_height="111dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#b2371e" />

            <Button
                android:id="@+id/button7"
                android:layout_width="116dp"
                android:layout_height="111dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#7842CD" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/button8"
                android:layout_width="116dp"
                android:layout_height="111dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#1E4FB2" />

            <Button
                android:id="@+id/button9"
                android:layout_width="116dp"
                android:layout_height="111dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#0080D6" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stage: 0"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreView" />

    <TextView
        android:id="@+id/difficultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty: Hard"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scoreView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>